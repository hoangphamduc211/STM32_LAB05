/* USER CODE BEGIN 0 */
void I2C_Scan(I2C_HandleTypeDef *hi2c) {
    HAL_StatusTypeDef result;
    uint8_t i;

    printf("Scanning I2C bus...\n");
    for (i = 1; i < 128; i++) { // 7-bit address range
        result = HAL_I2C_IsDeviceReady(hi2c, (uint16_t)(i << 1), 1, 10);
        if (result == HAL_OK) {

            printf("Device found at 0x%X\n", i);
        }
    }
    printf("Scanning finished.\n");
}
/* USER CODE END 0 */

